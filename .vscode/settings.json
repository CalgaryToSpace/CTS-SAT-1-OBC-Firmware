{
    "[markdown]": {
        "editor.wordWrap": "on",
    },

    "[c]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.rulers": [
            99
        ],
    },
    
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.rulers": [
            99
        ],
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "python.testing.pytestArgs": [
        "cts1_ground_support/tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,

    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/*.aider*": true,
        ".ruff_cache": true,
    },
}
